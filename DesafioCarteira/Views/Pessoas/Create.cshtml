@model DesafioCarteira.Models.Pessoa
@{
    ViewData["Title"] = "Criar pessoa";
}

<div id="criar-pessoa-view" class="main-container">
    <div class="card p-4">
        <h2>@ViewData["Title"]</h2>
        <form id="pessoa-create-form" asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salario" class="control-label"></label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limite" class="control-label"></label>
                <input asp-for="Limite" class="form-control" />
                <span asp-validation-for="Limite" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <label asp-for="Minimo" class="control-label"></label>
                <input asp-for="Minimo" class="form-control" />
                <span asp-validation-for="Minimo" class="text-danger small"></span>
            </div>
            <div class="button-control">
                <button type="submit" class="btn btn-primary" asp-action="Create">Salvar</button>
                <a type="button" class="btn btn-outline-primary" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>

<script src="~/js/requests/form-validation.js"></script>